<!doctype html>
<html lang="en">
	<head>
        <title>@ViewData["Title"] <img src="LayoutTemplate/images/Logo_white_small.png" alt="Buffteks logo"></title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


        <!-- Main CSS --> 
        <link rel="stylesheet" href="LayoutTemplate/css/style.css">

        <!-- Font Awesome -->
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    </head>
  
    <body id="home" data-spy="scroll" data-target="#navbar-top" data-offset="200">
        @RenderBody()
        
        <!-- Main navigation -->
        <nav id="navbar-top" class="navbar fixed-top navbar-expand-md navbar-dark">
            <div class="container">
                
                <!-- Company name shown on mobile -->
                <a class="navbar-brand"asp-controller="Home" asp-action="Index" ><span>Welcome</span></a>

                <!-- Mobile menu toggle -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Main navigation items -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav mr-auto">
                        <li data-toggle="collapse" data-target=".navbar-collapse.show" class="nav-item">
                                 <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a> 
                                <!-- <a asp-area="" asp-controller="Home" asp-action="Index">Home <span class="sr-only">Toggle navigation</span></a> -->
                        </li>
                        

                        <li data-toggle="collapse" data-target=".navbar-collapse.show" class="nav-item">
                                <a class="nav-link" asp-controller="Projects" asp-action="Index">Projects</a> 
                                <!-- <a asp-area="" asp-controller="Projects" asp-action="Index">Projects<span class="sr-only">Toggle navigation</span></a> -->
                        </li>
                        

                        <li data-toggle="collapse" data-target=".navbar-collapse.show" class="nav-item">
                            <a class="nav-link" asp-controller="Members" asp-action="Index">Members</a> 
                               <!-- <a asp-area="" asp-controller="Members" asp-action="Index">Members <span class="sr-only">Toggle navigation</span></a> -->
                        </li>
                      
                        <li data-toggle="collapse" data-target=".navbar-collapse.show" class="nav-item">
                            <a class="nav-link" asp-controller="Clients" asp-action="Index">Clients</a> 
                                <!-- <a asp-area="" asp-controller="Clients" asp-action="Index">Clients <span class="sr-only">Toggle navigation</span></a> -->
                        </li>

                    </ul>
                    
                    <form class="form-inline header-search-form my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="text" size="6"  placeholder="Search" aria-label="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </form>
                    
                </div>
                
                
                
            </div>
        </nav>

@RenderSection("scripts", required: false)
</body>
